        xmlns:local="clr-namespace:BorderedText"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Border BorderBrush="Red"
                BorderThickness="12"
                CornerRadius="24"
                Background="Yellow"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
