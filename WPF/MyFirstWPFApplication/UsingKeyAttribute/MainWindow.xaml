<Window x:Class="UsingKeyAttribute.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UsingKeyAttribute"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <sys:String x:Key="mystring">Hello WPF~</sys:String>
    </Window.Resources>
    <StackPanel Background="Orange">
        <TextBox Text="{StaticResource ResourceKey=mystring}" Margin="5"/>
        <TextBox x:Name="textBox2" Margin="5"/>
        <Button Content="Show" Click="Button_Click"/>
    </StackPanel>
</Window>
